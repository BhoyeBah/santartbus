<!-- Default Basic Forms Start -->
{{ form_start(form, { attr: { class: 'container' } }) }}


<!-- Corps du formulaire -->
<div class="card-body">
    <div class="row g-3">

        <!-- Catégorie -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.category, 'Nom de la catégorie') }}
                {{ form_widget(form.category, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.category) }}
            </div>
        </div>

        <!-- Nom du produit -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.name, 'Nom du produit') }}
                {{ form_widget(form.name, { attr: { class: 'form-control', placeholder: 'Entrez le nom du produit' } }) }}
                {{ form_errors(form.name) }}
            </div>
        </div>

        <!-- Prix -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.price, 'Prix') }}
                {{ form_widget(form.price, { attr: { class: 'form-control', placeholder: 'Entrez le prix' } }) }}
                {{ form_errors(form.price) }}
            </div>
        </div>

        <!-- Description -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, { attr: { class: 'form-control', rows: 5, placeholder: 'Entrez la description du produit' } }) }}
                {{ form_errors(form.description) }}
            </div>
        </div>

        <!-- Afficher sur la page d’accueil -->
        <div class="col-lg-12">
            <div class="form-check mt-3">
                {{ form_widget(form.ishome, { attr: { class: 'form-check-input' } }) }}
                {{ form_label(form.ishome, 'Afficher sur la page d’accueil', { label_attr: { class: 'form-check-label' } }) }}
                {{ form_errors(form.ishome) }}
            </div>
        </div>

        <!-- Champ de fichier image -->
        <div class="col-lg-12 mt-4">
            <div class="form-group">
                {{ form_label(form.imageFile, 'Image du produit') }}
                {{ form_widget(form.imageFile, { attr: { class: 'form-control-file' } }) }}
                {{ form_errors(form.imageFile) }}
            </div>
        </div>

    </div>
</div>

<!-- Bouton de soumission -->
<div class="card-action text-center mb-4">
    <button type="submit" class="btn btn-primary">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>


{{ form_end(form) }}
