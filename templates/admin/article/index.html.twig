{% extends 'admin.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<p class="mb-4">
    DataTables est un plugin tiers utilisé pour générer le tableau ci-dessous.
    Pour plus d'informations, visitez la
    <a target="_blank" href="https://datatables.net">documentation officielle de DataTables</a>.
</p>

<!-- DataTable Centré et Réduit -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow mb-4">

                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des articles</h6>
                    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Ajouter</a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Slug</th>
                                    <th>Date de création</th>
                                    <th>Date de modification</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for article in articles %}
                                <tr>
                                    <td>{{ article.title }}</td>
                                    <td>{{ article.slug }}</td>
                                    <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                        {{ include('admin/article/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}